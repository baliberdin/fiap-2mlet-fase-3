extends layout

block content
  br
  br
  
  if results.length > 0
    .row.row-cols-lg-4.row-cols-md-2.row-cols-sm-1.gx-5.gy-5
      for b in results
        .col
          .card.h-100
            a(href=`/book/${b.isbn}`)
              image.card-img-top.rounded(src=`${b.image_url}` title=b.title alt=b.title)
              .card-body
                h5.card-title= b.title
                p.card-text= `${b.publication_year} - ${b.author} - ${b.publisher}`
  else
    .col
      .h3 Não há livros para exibição.
  br
  br
        

